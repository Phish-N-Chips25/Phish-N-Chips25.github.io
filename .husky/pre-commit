#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Run Biome check (linting + formatting)
echo "📋 Running Biome check..."
npm run check
if [ $? -ne 0 ]; then
    echo "❌ Biome check failed. Please fix the issues before committing."
    echo "💡 You can run 'npm run check:fix' to automatically fix some issues."
    exit 1
fi

# Run Markdown lint
echo "📝 Running Markdown lint..."
npm run lint:md
if [ $? -ne 0 ]; then
    echo "❌ Markdown lint failed. Please fix the issues before committing."
    echo "💡 You can run 'npm run lint:md:fix' to automatically fix some issues."
    exit 1
fi

echo "✅ All pre-commit checks passed!"
